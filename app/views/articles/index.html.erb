<h1> Jimmy's List of Cool Stuff </h1>

<ul id="articles">
  <% @articles.each do |art| %>
  <li>

    <%= link_to art.title, article_path(art) %>
    <% if art.image.exists? %>
      <%= image_tag(art.image.url, size: "192x128") %>
    <% end %>

  </li>
  <% end %>
</ul>

<%= link_to "Create a new article", new_article_path, class: 'new_article' %>
